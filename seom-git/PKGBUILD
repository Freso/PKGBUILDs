pkgname=seom-git
pkgver=20111121
pkgrel=1
pkgdesc="Helper library for yukon, a screencapture solution for gaming."
arch=(i686)
license=('GPL')
url='https://github.com/wereHamster/yukon/wiki'
depends=('libgl' 'libx11')
makedepends=('git' 'yasm')
conflicts=('seom')
provides=('seom')

source=()
md5sums=()

_gitroot='https://github.com/wereHamster/seom.git'
_gitname='seom'

build() {
  cd ${srcdir}
  msg 'Connecting to Git server...'
  
  if [ -d $_gitname ]; then
    cd $_gitname && git pull origin
    msg 'The local files have been updated.'
  else
    git clone $_gitroot $_gitname
  fi
  
  msg "Git checkout done or server timeout"
  msg "Starting make..."
  
  cp -r $_gitname $_gitname-build
  cd $_gitname-build
  
  ./configure --prefix="/usr" || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}

# vim:syntax=sh
