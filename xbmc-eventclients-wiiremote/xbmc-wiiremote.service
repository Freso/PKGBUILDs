[Unit]
Description=XBMC Media Center Wiimote (Wii Remote) Eventclient
Documentation=man:xbmc-wiiremote(1) http://wiki.xbmc.org/index.php?title=EventServer#WiiRemote
Requires=bluetooth.service
After=bluetooth.service
Before=xbmc.service

[Service]
ExecStart=/usr/bin/xbmc-wiiremote

[Install]
WantedBy=multi-user.target
